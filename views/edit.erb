<form action="/memos/<%= @id %>/edit" method="post">
  <div class="form-group">
    <label>Title</label>
    <input type="hidden" name="_method" value="PATCH">
    <input type="text" class="form-control" name='title' required value="<%= @title %>">
  </div>
  <div class="form-group">
    <label>Content</label>
    <textarea type="text" class="form-control" name='content'><%= @content %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">保存</button>
</form>
<a href="/memos/<%= @id %>" class="btn btn-secondary">取消</a>
